<h1>Show blog</h1>

<p>
    <strong>Title:</strong>
    <%= @blog.title %>
</p>

<div>
  <p><%= link_to 'Edit', edit_blog_path(@blog.id) %> | <%= link_to 'Back', blogs_path %> </p>
</div>
<table>
  <thead>
    <tr>
      <th>Listing entries</th>
    </tr>
  </thead>
 
  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.title %></td>
        <td><%= link_to 'Show', blog_entry_path(@blog.id, entry) %></td>
        <td><%= link_to 'Edit', edit_blog_entry_path(@blog.id, entry) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Entry', new_blog_entry_path(@blog.id) %>
